# Nova-Mind 免费版本配置
# 此配置用于 GitHub/Vercel 部署
# 所有成本为 0 元

# ============================================
# 数据库配置（可选 - 使用本地 SQLite）
# ============================================
# 如果你想要数据持久化，可以使用 Vercel KV 或 Upstash Redis
# 暂时注释掉，使用内存存储
# DATABASE_URL=sqlite:./nova_mind.db

# ============================================
# 免费 LLM 模型配置
# ============================================

# 1. Ollama 本地模型（完全免费）
# 需要在本地运行 Ollama: ollama serve
OLLAMA_ENABLED=true
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=mistral  # 或 llama2

# 2. DeepSeek 免费 API（可选）
# 注意：DeepSeek 有免费额度限制
# 如果没有 API 密钥，系统会自动使用 Ollama
# DEEPSEEK_API_KEY=sk-your-free-key-here
# DEEPSEEK_API_URL=https://api.deepseek.com/v1

# ============================================
# 模型选择策略
# ============================================
# 策略：cost（最便宜）、balanced（平衡）、quality（最好质量）
MODEL_STRATEGY=cost

# 启用自动降级（当模型失败时自动切换）
ENABLE_AUTO_FALLBACK=true

# ============================================
# 成本控制配置
# ============================================
# 月度预算（免费版本设置为 0）
MONTHLY_COST_BUDGET=0

# 启用成本告警
ENABLE_COST_ALERTS=false

# ============================================
# 任务标签系统
# ============================================
# 启用任务类型标签
ENABLE_TASK_LABELS=true

# 标记任务是否使用免费模型
MARK_FREE_MODEL_TASKS=true

# ============================================
# 数据导出配置
# ============================================
# 启用对话导出
ENABLE_EXPORT=true

# 导出格式：json、markdown、csv
EXPORT_FORMAT=markdown

# 启用月度整合
ENABLE_MONTHLY_INTEGRATION=true

# ============================================
# 性能优化
# ============================================
# 启用响应缓存（减少 API 调用）
ENABLE_RESPONSE_CACHE=true

# 缓存过期时间（小时）
CACHE_TTL_HOURS=24

# 启用批量处理
ENABLE_BATCH_PROCESSING=true

# ============================================
# 日志配置
# ============================================
# 日志级别：debug、info、warn、error
LOG_LEVEL=info

# 启用成本日志
LOG_COSTS=true

# ============================================
# 应用配置
# ============================================
# 应用标题
VITE_APP_TITLE=Nova-Mind（免费版本）

# 应用 Logo
VITE_APP_LOGO=/logo-free.svg

# 应用环境
NODE_ENV=production

# ============================================
# 免费版本特殊配置
# ============================================
# 标记这是免费版本
IS_FREE_VERSION=true

# 显示成本提示
SHOW_COST_TIPS=true

# 显示升级提示
SHOW_UPGRADE_TIPS=true

# 免费版本限制
FREE_VERSION_DAILY_LIMIT=50  # 每天最多 50 次对话
FREE_VERSION_MONTHLY_LIMIT=1000  # 每月最多 1000 次对话
